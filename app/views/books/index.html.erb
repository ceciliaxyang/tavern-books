<div align="center"><h1>The Living Libary</h1><br><br><br></div>

<table>
 

<% @books.each do |book| %>
	<div class="row">
 		<div class="span2 offset2">
			<%= image_tag book.name+"-thumb.jpg"%>
		</div>
		<div class="span7 offset 2">
		    <h1><small><%= link_to book.title, book %></small></h1>
	    	<h3><%= book.author %></h3>
	
		    <% unless book.translator.empty? %>
				<p>Translated from the <%= book.OriginalLanguage %> by <%= book.translator %></p>
			<% end %>
		</div>
	</div>
<% end %>

</table>

<br />

<%= link_to 'New Book', new_book_path %>
